<h2 class="text-3xl font-bold text-center mb-6">Sign Up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification class: "text-red-500 mb-4" %>

  <div class="form-inputs space-y-4">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" },
                label_html: { class: "text-lg font-medium" },
                input_html: { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" } %>

    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" },
                label_html: { class: "text-lg font-medium" },
                input_html: { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" } %>

    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" },
                label_html: { class: "text-lg font-medium" },
                input_html: { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" } %>
  </div>

  <div class="form-actions mt-6">
    <%= f.button :submit, "Sign Up", class: "w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
